<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:columnCount="2"
    android:rowCount="8">


    <TextView
        android:id="@+id/textViewGasolina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:gravity="center_horizontal"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_rowSpan="2"
        android:text="@string/textViewGasolina"
        android:textSize="@dimen/textSizes" />

    <TextView
        android:id="@+id/precoGasolina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="right"
        android:text="@string/textPrecoGasolina" />

    <SeekBar
        android:id="@+id/seekBarGasolina"
        android:layout_gravity="fill_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:max="500"
        android:progress="250"/>

    <TextView
        android:id="@+id/textViewEtanol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:gravity="center_horizontal"
        android:text="textView"
        android:textSize="@dimen/textSizes" />

    <TextView
        android:id="@+id/precoEtanol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/textPrecoEtanol" />

    <SeekBar
        android:id="@+id/seekBarEtanol"
        android:layout_gravity="fill_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:max="500"
        android:progress="250"/>

    <TextView
        android:id="@+id/textViewMelhorUsar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:gravity="center_horizontal"
        android:layout_row="4"
        android:layout_columnSpan="2"
        android:text="Ã‰ Melhor Usar"
        android:textSize="@dimen/textSizes" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputMelhorUsar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="5"
        android:layout_columnSpan="2">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textTrocaMelhorUsar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:hint="hint" />
    </com.google.android.material.textfield.TextInputLayout>

    <ImageView
        android:id="@+id/imageViewMelhorUsar"
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/imagen"
        android:layout_row="6"
        android:layout_columnSpan="2"
        android:layout_gravity="center_horizontal"
         />

</GridLayout>